div(class="classified-list spacer")
    div(class="container")
        <!--product thumbs-->
        h2 Free Classified Listing
        ul(class="list-unstyled listing")
            li(href="#", ng-repeat="classified in classifiedList")
                div(class="row")
                    span(class="col-sm-1 hidden-xs")
                        a(href="#")
                            img(src="{{classified.src}}", class="img-responsive")
                    span(class="col-sm-4 col-xs-12")
                        h5
                            a(href="#") {{classified.title}}
                    span(class="col-sm-1 col-xs-4") {{classified.Currency}} {{classified.Price}}
                    span(class="col-sm-2 col-xs-8") {{classified.Seller}}
                    span(class="col-sm-2 hidden-xs  col-xs-12") {{classified.PostedOn}}
                    span(class="col-sm-2  hidden-xs  col-xs-12 text-right")
                        a(href="#", class="btn btn-default") View Details

        <!--product thumbs-->
